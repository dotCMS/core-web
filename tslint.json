{
    "extends": ["tslint-angular"],
    "rules": {
        "directive-selector": [true, "attribute", "dot", "camelCase"],
        "component-selector": [true, "element", "dot", "kebab-case"],
        "max-classes-per-file": false,
        "use-view-encapsulation": false,
        "whitespace": [true, "check-branch", "check-operator", "check-separator", "check-type"]
    }
}
